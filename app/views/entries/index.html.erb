<h1>My Diary</h1>
<%= image_tag("logos/puzzles.jpg") %>
  <div>
    <% for entry in @entries %>
      <h2><%= link_to(entry.title, entry_path(entry)) %></h2>
      <p><%= entry.date %></p>
      <p><%= entry.contents %></p>
    <% end %>
  </div>

  <div>
<h1>My favourite websites</h1>
  <ul>
    <% for url, name in @websites %>
      <li><a href="<%= url %>"><%= name %></a></li>
    <% end %>
  </ul>
</div>

    <%= link_to("New entry", new_entry_path) %>
